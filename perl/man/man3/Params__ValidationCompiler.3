.SH "NAME"
Params::ValidationCompiler \- Build an optimized subroutine parameter validator once, use it forever
.SH "VERSION"
.IX Header "VERSION"
version 0.26
.SH "SYNOPSIS"
.IX Header "SYNOPSIS"
.Vb 2
\&    use Types::Standard qw( Int Str );
\&    use Params::ValidationCompiler qw( validation_for );
\&
\&    {
\&        my $validator = validation_for(
\&            params => {
\&                foo => { type => Int },
\&                bar => {
\&                    type     => Str,
\&                    optional => 1,
\&                },
\&                baz => {
\&                    type    => Int,
\&                    default => 42,
\&                },
\&            },
\&        );
\&
\&        sub foo {
\&            my %args = $validator\->(@_);
\&        }
\&    }
\&
\&    {
\&        my $validator = validation_for(
\&            params => [
\&                { type => Int },
\&                {
\&                    type     => Str,
\&                    optional => 1,
\&                },
\&            ],
\&        );
\&
\&        sub bar {
\&            my ( $int, $str ) = $validator\->(@_);
\&        }
\&    }
\&
\&    {
\&        my $validator = validation_for(
\&            params => [
\&                foo => { type => Int },
\&                bar => {
\&                    type     => Str,
\&                    optional => 1,
\&                },
\&            ],
\&            named_to_list => 1,
\&        );
\&
\&        sub baz {
\&            my ( $foo, $bar ) = $validator\->(@_);
\&        }
\&    }
